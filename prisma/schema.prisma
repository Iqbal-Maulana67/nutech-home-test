generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  Int @id @default(autoincrement())
  first_name String
  last_name String
  email String @unique
  password String
  profile_image String?
  balance Int @default(0)
  history History[]
  createdAt DateTime @default(now())
}

model Banner {
  id Int @id @default(autoincrement())
  banner_name String
  banner_image String
  description String
}

model Services {
  service_code String @id
  service_name String
  service_icon String
  service_tariff Int

}

model History {
  invoice_number String @id
  author User @relation(fields: [userId], references: [id])
  userId Int
  transaction_type String
  description String
  total_amount Int
  created_on DateTime @default(now())
}

